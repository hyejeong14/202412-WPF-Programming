<Window x:Class="_02_XAML.Ex1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_XAML"
        mc:Ignorable="d"
        Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Window.Title>Hello</Window.Title>
    <!-- 속성은 위 Height처럼 "Attribute"가 편리하지만 한계가 있음-->
    <!-- 배경색으로 GradientBrush 라는 것을 사용하려면 아래처럼 해야 함-->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="Yellow" Offset="0.0"/>
            <GradientStop Color="red" Offset="0.25"/>
            <GradientStop Color="Blue" Offset="0.75"/>
            <GradientStop Color="LimeGreen" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
</Window>
