<Window x:Class="_02_XAML.Ex2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_XAML"
        mc:Ignorable="d"
        Title="Ex2Window" Height="450" Width="800">
    <StackPanel>
        <Button Content="확인1"/>

        <!--버튼을 생성하는 여러가지 방법-->
        <Button>확인2</Button>
        <Button Content="확인3"></Button>

        <!--세부옵션 설정하기, margin(상하좌우)-->
        <Button Content="확인4" FontSize="20" FontFamily="궁서체" Background="LightBlue" Margin="30,10,30,50"/>
        
        <!-- #2. event 처리-->
        <Button Click="Button_Click" Content="확인5"/>
        

    </StackPanel>
</Window>
