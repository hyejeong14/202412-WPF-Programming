<Window x:Class="_02_XAML.Ex3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_XAML"
        mc:Ignorable="d"
        Title="Ex3Window" Height="450" Width="800">
    <StackPanel>
        
        <!-- c#에서 컨트롤에 직접 접근하려면 이름이 있어야 함-->
        <!-- Name 이나 x:Name 가능, Name보다 x:Name을 권장함 
        (Name Property가 없는 컨트롤이 있음)-->
        <!-- Name은 UIElement 클래스로부터 상속받는 Property인데,
        UIElement에서 상속되지 않은 클래스는 Name이 없음, But x:Name은 이 경우에도 있음-->
        <Button Content="버튼1" Name="btn1"/>
        <Button Content="버튼2" x:Name="btn2"/>
        
    </StackPanel>
</Window>
