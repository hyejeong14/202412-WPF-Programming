<Window x:Class="_05_EVENT.Ex2KeyEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_EVENT"
        mc:Ignorable="d"
        Title="Ex2KeyEvent" Height="450" Width="800">
    <StackPanel>

        <TextBox x:Name="txtbox" Width="300" Height="200"
                 KeyDown="KeyEvent" KeyUp="KeyEvent"
                 PreviewKeyDown="KeyEvent" PreviewKeyUp ="KeyEvent"
                 PreviewTextInput="MyTextInput"
                 TextChanged="TextChanged"/>

    </StackPanel>
</Window>
