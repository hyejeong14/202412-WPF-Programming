<Window x:Class="_06_RESOURCE.Ex3Resource3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06_RESOURCE"
        mc:Ignorable="d"
        Title="Ex3Resource3" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="mybrush" Color="Red"/>
    </Window.Resources>


    <StackPanel>

        <Button Content="button1" Background="{StaticResource mybrush}"/>
        <Button Content="button2" Background="{DynamicResource mybrush2}"/>
        <Button Content="button3" Background="{DynamicResource mybrush3}"/>
        <Button Content="button4" Background="{DynamicResource mybrush4}"/>
    </StackPanel>
</Window>
