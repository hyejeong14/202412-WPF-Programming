<Window x:Class="_04_LAYOUT.Ex2Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_LAYOUT"
        mc:Ignorable="d"
        Title="Ex2Canvas" Height="450" Width="800" Background="Yellow">
    
    
    <!-- Layout들은 모두 브러시가 디폴트로 Null브러쉬임-->
    <!-- {x:Null} : Null Brush 마우스 이벤트를 받을 수 없음-->
    <!-- Transparent : 투명한 브러쉬, 마우스 이벤트를 받을 수 있음-->
    <!-- 그 외 색상이 있는 모든 브러쉬가 있으면 이벤트를 받을 수 있음-->
    <!--<Canvas Background="{x:Null}" x:Name="canvas" MouseMove="canvas_MouseMove" MouseLeftButtonDown="canvas_MouseLeftButtonDown">-->
    <!--<Canvas Background="Transparent"  x:Name="canvas" MouseMove="canvas_MouseMove" MouseLeftButtonDown="canvas_MouseLeftButtonDown">-->
        <Canvas Background="White"  x:Name="canvas" MouseMove="canvas_MouseMove" MouseLeftButtonDown="canvas_MouseLeftButtonDown" MouseRightButtonDown="canvas_MouseRightButtonDown">
    </Canvas>
</Window>
