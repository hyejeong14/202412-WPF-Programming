<Window x:Class="_08_Control.Ex3ListBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_Control"
        mc:Ignorable="d"
        Title="Ex3ListBox" Height="450" Width="800">
    <Grid>
        <!-- Grid Row, Col 지정하지 않으면 0,0만 존재-->

        <ListBox x:Name="listbox">
            <!-- 아이템을 추가하려면 ListBox.Items 사이에 ListBox Item을 넣으면 됨-->
            <ListBox.Items>
                
                <ListBoxItem Content="AAA"/>
                <ListBoxItem Content="BBB"/>

                <ListBoxItem>
                    <Button Content="button"/>
                </ListBoxItem>

                <ListBoxItem>
                    <StackPanel Orientation="Horizontal" Background="Yellow">
                        <CheckBox></CheckBox>
                        <Label Content="CCC"/>
                    </StackPanel>
                </ListBoxItem>
                
            </ListBox.Items>
            
            
        </ListBox>
    </Grid>
</Window>
