<Window x:Class="_08_Control.Ex4Event"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_Control"
        mc:Ignorable="d"
        Title="Ex4Event" Height="450" Width="800">

    <StackPanel Orientation="Horizontal">
        
        <TextBox x:Name="txtbox" Width="100" Height="100" PreviewKeyDown="txtbox_PreviewKeyDown"/>
        <Button Content="button1" Width="100" Height="100" Click="Button_Click"/>
        <ListBox SelectionChanged="listbox_SelectionChanged" x:Name="listbox" Width="100" Height="200"/>
        <Label x:Name="label" Width="100" Height="100"/>
    </StackPanel>
    
    
</Window>
