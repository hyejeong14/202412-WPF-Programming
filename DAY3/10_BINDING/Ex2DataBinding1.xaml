<Window x:Class="_10_BINDING.Ex2DataBinding1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_BINDING"
        mc:Ignorable="d"
        Title="Ex2DataBinding1" Height="450" Width="800">
    <StackPanel x:Name="stackpanel">

        <!-- Layout(stackpanel) 에 연결된 객체의 Property 과 컨트롤을 자동연결 -->
        <TextBox Text="{Binding Path=Name}"   Margin="20" FontSize="48"/>
        <TextBox Text="{Binding Path=Address}" Margin="20" FontSize="48"/>

        <Button Content="button" Click="Button_Click"/>

    </StackPanel>


</Window>